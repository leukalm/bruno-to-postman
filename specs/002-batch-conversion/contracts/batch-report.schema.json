{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Batch Conversion Report",
  "type": "object",
  "required": ["totalFiles", "successCount", "failureCount", "duration", "successRate"],
  "properties": {
    "totalFiles": {
      "type": "integer",
      "minimum": 0,
      "description": "Total .bru files found"
    },
    "successCount": {
      "type": "integer",
      "minimum": 0,
      "description": "Successfully converted files"
    },
    "failureCount": {
      "type": "integer",
      "minimum": 0,
      "description": "Failed conversion count"
    },
    "duration": {
      "type": "number",
      "minimum": 0,
      "description": "Total time in milliseconds"
    },
    "successRate": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "Success percentage"
    },
    "outputPath": {
      "type": "string",
      "description": "Path to generated collection file"
    },
    "errors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["filePath", "message", "type", "phase", "isRecoverable"],
        "properties": {
          "filePath": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["parse", "validation", "conversion", "filesystem"]
          },
          "line": {
            "type": "integer"
          },
          "phase": {
            "type": "string",
            "enum": ["read", "parse", "validate", "convert", "write"]
          },
          "suggestion": {
            "type": "string"
          },
          "isRecoverable": {
            "type": "boolean"
          }
        }
      }
    },
    "warnings": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
